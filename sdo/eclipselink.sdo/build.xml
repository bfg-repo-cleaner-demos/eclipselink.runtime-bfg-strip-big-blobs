<project name="Compile SDO" default="compile.sdo"  basedir=".">
    <property file="./build.properties"/>
    <path id="sdo.compile.path">
        <fileset
            dir="${_dependsDir}"
            includes="${sdo.depend.jars}"/>
        <pathelement path="${asm.lib.dir}"/>
		<pathelement path="${core.classes.dir}"/>
    </path>
	<target name="compile.sdo" depends="clean, compile.core">
        <javac srcdir="${sdo.source.dir}" 
               destdir="${sdo.classes.dir}"
               includes="**/*.java"
			   memoryMaximumSize="512m"
			   fork="true">
            <classpath>
                <path refid="sdo.compile.path"/>
            </classpath>
		</javac>
    </target>
	<target name="compile.core">
		<!-- Uncomment the following line to compile the foundation classes before building -->
		<ant antfile="${_foundationDir}/core/build.xml" target="all" inheritAll="false"/>
	</target>
    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${sdo.classes.dir}"/>
        </delete>
		<mkdir dir="${sdo.classes.dir}"/>
    </target>
</project>	