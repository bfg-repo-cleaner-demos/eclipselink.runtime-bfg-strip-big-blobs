

    <project name="sdo-oracle" default="compile" basedir=".">
    
       <property name="src" value="."/>
       <property name="classes" value="classes"/>
	<property environment="env"/>

	
       <target name="init">	
		<path id="compile.sdo.path">
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/tl/toplink.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/xmlparserv2.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/asm.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/asm-tree.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/asm-util.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/asm-attrs.jar"/>
                        <pathelement path="${env.ADE_VIEW_ROOT}/tldev/jlib/asm-analysis.jar"/>
                </path>

       </target>
	       
	<target name="compile" depends="init">	
            <mkdir dir="${classes}"/>            
            <javac srcdir="${src}"
                   destdir="${classes}"
                   includes="**/*.java"
		   debug="true"
		   excludes="**/*&#35;*/**,**/.ade_path/**">
		   <classpath refid="compile.sdo.path"/>
            </javac>
       </target>

	<target name="zip" depends="compile">	
		<zip zipfile="sdo_classes.zip">
		<fileset dir="${classes}" 
	 		includes="**/*.class"
                	excludes="**/*&#35;*/**, **/.ade_path/**"
		/>
	
		<fileset dir="." 
	 		includes="start.xsd"
		/>

		<fileset dir="." 
	 		includes="**/*.java"
                	excludes="**/*&#35;*/**, **/.ade_path/**"
		/>
		</zip>
       </target>

    </project>

