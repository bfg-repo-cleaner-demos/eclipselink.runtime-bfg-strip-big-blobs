<project name="Eclipse Persistence Services" default="all" basedir=".">

    <property file="./build.properties"/>

    <path id="compile.path">
        <pathelement path="${antlr}/${classes.dir}"/>
        <pathelement path="${asm}/${classes.dir}"/>
        <pathelement path="${eclipselink.core}/${classes.dir}"/>
        <pathelement path="${javaee.lib}"/>
    </path>

    <!-- all -->
    <target name="all" depends="clean, compile" description="build core classes"/>

    <!-- compile --> 
    <target name="compile" depends="" description="compile EclipseLink JPA">  
        <javac srcdir="${src.dir}" 
               destdir="${classes.dir}"
               includes="org/eclipse/persistence/**"
               debug="${javac.debug}" 
               optimize="${javac.optimize}"
               source="1.5" 
               deprecation="${javac.deprecation}"
               failonerror="true">
            <classpath>
                <path refid="compile.path"/>
            </classpath>
        </javac>
    </target>

    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${classes.dir}/org"/>
        </delete>
    </target>

</project>