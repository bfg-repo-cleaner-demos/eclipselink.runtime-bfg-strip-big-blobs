<project name="org.eclipse.persistence.jpa" default="build" basedir=".">
    <available file="../${ant.project.name}" type="dir" property="jpa.is.local"/>
    <!-- Test to make sure that the calling script doesn't inherit the variable -->
    <!-- (should be set locally, and be destroyed upon return) -->
    <fail message="Not running from '${ant.project.name}' directory" unless="jpa.is.local"/>

    <dirname  property="jpa.build.location" file="${ant.file.org.eclipse.persistence.core}"/>
    <condition property="jpa.2.common.plugins.dir" value="../../plugins" else="../plugins">
        <contains string="${jpa.build.location}" substring="jpa"/>
    </condition>

    <property file="${user.home}/build.properties"/>
    <property file="./build.properties"/>

    <!-- versioning -->
    <!-- These variables  are set in autobuild.xml. A manual build gets defaults -->
    <tstamp>
       <format property="build.date" pattern="yyyyMMdd"/>
    </tstamp>
    <property name="build.type" value="SNAPSHOT"/>
    <property name="svn.revision" value="NA"/>
    <property name="version.string" value="${release.version}.${build.date}-${build.type}"/>
    <property name="release.designation"  value="EclipseLink DeveloperBuild"/>

    <!-- Set Compile Path-->
    <path id="jpa.compile.path">
        <pathelement path="${jpa.2.common.plugins.dir}/${antlr}"/>
        <pathelement path="${jpa.2.common.plugins.dir}/${asm}"/>
        <pathelement path="${jpa.2.common.plugins.dir}/org.eclipse.persistence.core_${version.string}.jar"/>
        <pathelement path="${jpa.2.common.plugins.dir}/osgi.core.zip"/>
        <fileset
            dir="../${plugins.dir}"
            includes="${eclipselink.jpa.depend}"/>
        <fileset
            dir="${jpa.2.common.plugins.dir}"
            includes="${eclipselink.core.depend}"/>
    </path>
    <available file="${jpa.2.common.plugins.dir}/org.eclipse.persistence.core_${version.string}.jar" property="core.bundle.exist"/>
    <available file="../${plugins.dir}/javax.persistence_1.99.0.jar" property="jpa2.jar.exist"/>
    <available file="../${plugins.dir}/javax.persistence/${classes.dir}" type="dir" property="jpa2.classes.exist"/>

    <!-- all -->
    <target name="build" depends="clean, compile, package" description="build JPA component"/>

    <!-- clean -->
    <target name="clean" description="Clean all generated content">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${classes.dir}"/>
            <fileset dir="${jpa.2.common.plugins.dir}" includes="${eclipselink.jpa.bndl.prefix}*.jar"/>
        </delete>
    </target>

    <!-- compile -->
    <target name="compile" description="Compile EclipseLink JPA">
        <fail message="Cannot find Core: '${jpa.2.common.plugins.dir}/org.eclipse.persistence.core_${version.string}.jar'." unless="core.bundle.exist"/>
        <fail message="Cannot find JAXB 2.0:'../plugins/javax.persistence_1.99.0.jar'." unless="jpa2.jar.exist"/>
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}"
               destdir="${classes.dir}"
               includes="org/eclipse/persistence/**/*.java"
               debug="${javac.debug}"
               optimize="${javac.optimize}"
               source="${javac.version}"
               target="${javac.version}"
               deprecation="${javac.deprecation}"
               failonerror="true"
               memoryMaximumSize="512m"
               fork="true"
               classpathref="jpa.compile.path"
        />
    </target>

    <!-- package -->
    <target name="package" description="jar OSGI bundle">
        <fail message="Cannot find JAXB 2.0 class dir:'../plugins/javax.persistence/${classes.dir}'" unless="jpa2.classes.exist"/>
        <jar jarfile="${jpa.2.common.plugins.dir}/${eclipselink.jpa.bndl.prefix}_${version.string}.jar" manifest="META-INF/MANIFEST.MF">
            <fileset dir="${classes.dir}">
                <include name="org/eclipse/persistence/**/*.class"/>
            </fileset>
            <fileset dir="${resource.dir}">
                <include name="org/eclipse/persistence/jpa/*.xsd"/>
                <include name="META-INF/services/javax.persistence.spi.PersistenceProvider"/>
            </fileset>
        </jar>
        <jar jarfile="${jpa.2.common.plugins.dir}/${eclipselink.jpa.bndl.prefix}.source_${version.string}.jar">
             <manifest>
                <attribute name="Bundle-ManifestVersion" value="2"/>
                <attribute name="Bundle-Name"            value="EclipseLink JPA Source"/>
                <attribute name="Bundle-SymbolicName"    value="${ant.project.name}"/>
                <attribute name="Bundle-Version"         value="${release.version}"/>
                <attribute name="Eclipse-SourceBundle"   value="${ant.project.name};version=&quot;${release.version}&quot;"/>
            </manifest>
            <fileset dir="${src.dir}">
                <include name="org/eclipse/persistence/**/*.java"/>
            </fileset>
            <fileset dir="${resource.dir}">
                <include name="org/eclipse/persistence/jpa/*.xsd"/>
                <include name="META-INF/services/javax.persistence.spi.PersistenceProvider"/>
            </fileset>
        </jar>
    </target>

    <!--  This target is used ONCE at the beginning of a release to update the bundle manifest files.  -->
    <!--  Do not run it, or hook it up to the "build" target -->
    <target name="update-manifest" if="svn.exec" description="update and check-in the manifest">
        <filter token="VERSION" value="${release.version}"/>
        <delete file="META-INF/MANIFEST.MF" failonerror="false"/>
        <copy file="META-INF/MANIFEST.template" tofile="META-INF/MANIFEST.MF" filtering="true"/>
        <exec executable="${svn.exec}" failonerror="false" logError="true">
            <arg value="commit"/>
            <arg value="-m ${version.string}"/>
            <arg value="META-INF/MANIFEST.MF"/>
        </exec>
    </target>

</project>