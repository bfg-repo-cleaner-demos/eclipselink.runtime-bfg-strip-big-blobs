<project name="Eclipse Persistence Services - asm" default="all" basedir=".">

    <property file="./build.properties"/>

    <!-- all -->
    <target name="all" depends="compile, package.compile.jar" description="build asm classes"/>

    <target name="init">
        <mkdir dir="${asm}/${classes.dir}"/>
    </target>

    <!-- compile --> 
    <target name="compile" depends="init" description="compile asm">  
        <javac srcdir="${asm}/${src.dir}" 
               destdir="${asm}/${classes.dir}"
               includes="org/eclipse/persistence/internal/libraries/asm/**"
               debug="${javac.debug}" 
               optimize="${javac.optimize}"
               source="1.5" 
               deprecation="${javac.deprecation}"
               failonerror="true">
        </javac>
    </target>

    <target name="package.compile.jar" depends="compile">
        <jar jarfile="${asm}/../eclipselink-asm.jar">
            <fileset dir="${asm}/${classes.dir}">
            </fileset>
        </jar>
    </target>

    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${asm}/${classes.dir}"/>
        </delete>
    </target>

</project>