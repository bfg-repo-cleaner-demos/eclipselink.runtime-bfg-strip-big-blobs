<project name="Eclipse Persistence Services" default="all" basedir=".">

    <property file="./build.properties"/>

    <path id="compile.path">
        <pathelement path="${antlr}/${classes.dir}"/>
        <pathelement path="${asm}/${classes.dir}"/>
        <pathelement path="${javaee.lib}"/>
    </path>
	
    <!-- all -->
    <target name="all" depends="clean, init, compile" description="build EclipseLink jar"/>

    <target name="init">
        <tstamp>
            <format property="start.time" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp> 
    </target>

    <!-- compile --> 
    <target name="compile" depends="init" description="compile EclipseLink">  
        <mkdir dir="${eclipselink.core}/${classes.dir}"/>
        <javac srcdir="${eclipselink.core}/${src.dir}" 
               destdir="${eclipselink.core}/${classes.dir}"
               includes="org/eclipse/persistence/**, deprecated/**"
               debug="${javac.debug}" 
               optimize="${javac.optimize}"
               source="1.5" 
               deprecation="${javac.deprecation}"
               failonerror="true"
               memoryMaximumSize="512m"
               fork="true">
            <classpath>
                <path refid="compile.path"/>
            </classpath>
        </javac>
    </target>

    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${eclipselink.core}/${classes.dir}/org"/>
        </delete>
    </target>
	
</project>