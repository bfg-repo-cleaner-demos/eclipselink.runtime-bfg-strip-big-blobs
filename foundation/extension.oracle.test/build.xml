<project name="Eclipse Persistence Services" default="all" basedir=".">

    <property file="./build.properties"/>

    <!-- all -->
    <target name="all" depends="package.structconverter" description="package the struct converter model"/>

    <target name="package.structconverter">
        <copy todir="${build.dir}/${struct_converter.classes.dir}/META-INF">
            <fileset dir="./resource/structconverter" includes="*.xml"/>
        </copy>
        <copy todir="${build.dir}/${struct_converter.classes.dir}">
            <fileset dir="${classes.dir}"
                     includes="org/eclipse/persistence/testing/models/jpa/structconverter/**"/>
        </copy>
        <jar jarfile="eclipselink-struct-converter-model.jar">
            <fileset dir="${build.dir}/${struct_converter.classes.dir}">
            </fileset>
        </jar>
    </target>

    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${classes.dir}"/>
            <fileset dir="${struct_converter.classes.dir}"/>
        </delete>
    </target>

</project>