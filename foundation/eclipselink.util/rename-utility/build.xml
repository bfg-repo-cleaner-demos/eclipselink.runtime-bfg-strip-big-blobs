<project name="Eclipse Persistence Services" default="all" basedir=".">

    <property file="${user.home}/build.properties"/>
    <property file="./build.properties"/>

    <!-- all -->
    <target name="all" depends="clean, compile" description="Build util classes"/>

    <!-- compile --> 
    <target name="compile" depends="" description="compile EclipseLink Util">
        <mkdir dir="${eclipselink.util.rename.utility}/${classes.dir}"/>
        <javac srcdir="${eclipselink.util.rename.utility}/${src.dir}" 
               destdir="${eclipselink.util.rename.utility}/${classes.dir}"
               debug="${javac.debug}" 
               optimize="${javac.optimize}"
               source="1.5" 
               deprecation="${javac.deprecation}"
               failonerror="true">
        </javac>
    </target>

    <!-- compile --> 
    <target name="clean" description="Clean the build">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${eclipselink.util.rename.utility}/${classes.dir}"/>
        </delete>
    </target>

</project>