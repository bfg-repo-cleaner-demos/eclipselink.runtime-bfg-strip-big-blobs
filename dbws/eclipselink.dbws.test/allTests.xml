<?xml version="1.0"?>
<!--
    My Ant naming conventions:
        - regardless of the actual OS platform,'/' is the directory separator
          (Ant will convert as appropriate).
        - properties have periods '.',task-names have hyphens '-'.
        - OS environment variables are in ALLCAPS and have 'env' as a prefix
          e.g. ${env.XXX}.
        - Ant properties are lower case.
        - xxx.home = root of a product or component's installation.
        - xxx.dir = root of a directory structure.
        - xxx.jlib.dir = a directory that contains jars,also known
          as "java libraries".
        - xxx.jlib = comma-separated list of jars.
        - tasks with the word 'compile' in them (obviously!) compile
          Java source to the staging directory.
        - tasks with the word 'build' in them extract from the staging
          directory Java class files (and other runtime artifacts such
          as MANIFEST.MF files,deployment XML files,etc) using a variety
          of inclusion and/or exclusion patterns in order to create
          a Java archive of some sort: jar,war,ear.
-->
<project
  basedir="."
  default="all-tests"
  name="eclipselink.dbws.test"
  >
  <description>
    This Ant build file is used to run all the DBWS tests.
  </description>
  <!-- OS environment variables MUST ALWAY have 'env' as prefix - do NOT changes this! -->
  <property
    environment="env"
  />
  <!-- properties specific to this project -->
  <property
      file="allTests.properties"
  />
  <!-- pre-defined paths -->
  <path
    id="eclipselink.core.lib.path"
    >
    <fileset
      dir="${eclipselink.core.lib.jlib.dir}"
      includes="${eclipselink.core.lib.jlib}"
    />
  </path>
  <path
    id="eclipselink.core.path"
    >
    <pathelement path="${eclipselink.core.jlib.dir}"/>
  </path>
  <path
    id="eclipselink.core.test.path"
    >
    <pathelement path="${eclipselink.core.test.jlib.dir}"/>
  </path>
  <path
    id="eclipselink.moxy.lib.path"
    >
    <fileset
      dir="${eclipselink.moxy.lib.jlib.dir}"
      includes="${eclipselink.moxy.lib.jlib}"
    />
  </path>
  <path
    id="eclipselink.moxy.path"
    >
    <pathelement path="${eclipselink.moxy.jlib.dir}"/>
  </path>
  <path
    id="eclipselink.dbws.lib.path"
    >
    <fileset
      dir="${eclipselink.dbws.lib.jlib.dir}"
      includes="${eclipselink.dbws.lib.jlib}"
    />
  </path>
  <path
    id="eclipselink.dbws.path"
    >
    <pathelement path="${eclipselink.dbws.jlib.dir}"/>
  </path>
  <path
    id="junit4.path"
    >
    <fileset
      dir="${junit4.jlib.dir}"
      includes="${junit4.jlib}"
    />
  </path>
  <path
    id="pb4.path"
    >
    <fileset
      dir="${pb4.jlib.dir}"
      includes="${pb4.jlib}"
    />
  </path>
  <typedef
    resource="junit/extensions/pb4/ant/antlib.xml"
    >
    <classpath>
      <path refid="junit4.path"/>
      <path refid="pb4.path"/>
    </classpath>
  </typedef>

  <target
    name="all-tests"
    >
    </target>
</project>