<project
  name="eclipselink.utils.dbws.test"
  default="test"
  basedir="."
  >
  <condition property="is.java.version.16">
      <equals arg1="${ant.java.version}" arg2="1.6"/>
  </condition>
  <fail
    message="eclipselink.utils.dbws.test requires Java version 1.6 or higher. You are currently using Java version ${ant.java.version}."
    unless="is.java.version.16"
  />
  <!-- OS environment variables have 'env' as a prefix -->
  <property
    environment="env"
  />
  <!-- local property overrides -->
  <property
    file="${user.home}/build.properties"
  />
  <!-- local testing properties overrides -->
  <property
    file="${user.home}/test.properties"
  />
  <!-- find out where this build.xml file is -->
  <dirname
    property="eclipselink.utils.dbws.test"
    file="${ant.file.eclipselink.utils.dbws.test}"
  />
  <!-- properties checked into SVN -->
  <property
    file="${eclipselink.utils.dbws.test}/build.properties"
  />
  <!-- testing properties checked into SVN -->
  <property
    file="${eclipselink.utils.dbws.test}/test.properties"
  />
  <!-- Classpath used for compiling tests. -->
  <path
    id="compile.path"
    >
    <pathelement
      path="${junit.lib}"
    />
    <pathelement
      path="${eclipselink.jar.name}"
    />
    <pathelement
      path="${eclipselink.plugins}/${asm}"
    />
    <pathelement
      path="${eclipselink.utils.plugins}/${eclipselink.utils.dbws.depend}"
    />
    <pathelement
      path="${eclipselink.utils.dbws}/${eclipselink.utils.dbws.jlib}"
    />
    <fileset
      dir="${eclipselink.plugins}"
      includes="${eclipselink.dbws.core.depend}"
    />
  </path>
  <presetdef name="javac">
    <javac
      debug="${javac.debug}"
      debuglevel="${javac.debuglevel}"
      optimize="${javac.optimize}"
      source="1.6"
      deprecation="${javac.deprecation}"
      failonerror="true"
      includes="**/*.java"
      memoryMaximumSize="512m"
    />
  </presetdef>
  <presetdef
    name="DeleteDirQuietly"
    >
    <delete
      dir="_tmp_"
      quiet="true"
      failonerror="false"
    />
  </presetdef>
  <presetdef
    name="DeleteFileQuietly"
    >
    <delete
      file="_tmp_"
      quiet="true"
      failonerror="false"
    />
  </presetdef>
  <scriptdef
    name="toLower"
    language="javascript"
    manager="javax"
    >
    <attribute name="input"/>
    <attribute name="property"/>
    <![CDATA[
      // getting the value
      input = attributes.get("input");
      property = attributes.get("property");
      if (input == null || property == null) {
         self.fail("both 'input' and 'property' attributes must be set.");
      }
      lowercaseInput = input.toLowerCase();
      // put result into property - NB overwrites previous value! Not safe for <parallel> tasks
      project.setProperty(attributes.get("property"), lowercaseInput);
    ]]>
  </scriptdef>
  <!-- slightly complex way to do if-then-else in Ant without additional macros -->
  <target
    name="should-compile-common"
    depends="compile-common,dont-compile-common"
  />
  <target
    name="compile-common"
    unless="eclipselink.utils.dbws.common.available"
    depends="test-common-available"
    >
    <javac
      srcdir="${eclipselink.utils.dbws.test}/${src.dir}"
      destdir="${eclipselink.utils.dbws.test}/${classes.dir}"
      includes="dbws/testing/*.java"
      >
      <classpath>
        <path refid="compile.path"/>
      </classpath>
    </javac>
    <jar
      destfile="${eclipselink.utils.dbws.test}/${eclipselink.utils.dbws.common.jlib}"
      >
			<fileset
        dir="${eclipselink.utils.dbws.test}/${classes.dir}"
        includes="dbws/testing/*.class"
			/>
    </jar>
  </target>
  <target
    name="dont-compile-common"
    if="eclipselink.utils.dbws.common.available"
    depends="test-common-available"
    >
  </target>
  <target
    name="test-common-available"
    >
    <available
      file="${eclipselink.utils.dbws.test}/${eclipselink.utils.dbws.common.jlib}"
      type="file"
      property="eclipselink.utils.dbws.common.available"
    />
  </target>
  <target
      name="init"
      depends="should-compile-common"
      >
      <path
        id="run.path"
        >
        <path
          refid="compile.path"
        />
        <pathelement
          path="${jdbc.driver.jar}"
        />
        <pathelement
          path="${eclipselink.utils.dbws.test}/${eclipselink.utils.dbws.common.jlib}"
        />
      </path>
      <DeleteDirQuietly dir="${eclipselink.utils.dbws.test}/${report.dir}"/>
      <mkdir dir="${eclipselink.utils.dbws.test}/${report.dir}"/>
  </target>
  <macrodef
    name="SetupDatabase"
    >
    <attribute name="testsuite-name"/>
    <sequential>
      <sql
        onerror="continue"
        keepformat="true"
        driver="${db.driver}"
        url="${db.url}"
        userid="${db.user}"
        password="${db.pwd}"
        classpathref="run.path"
        delimiter="|"
        >
        <fileset
          dir="${eclipselink.utils.dbws.test}/${etc.dir}"
          >
         <include name="dbsetup_@{testsuite-name}.sql"/>
        </fileset>
      </sql>
    </sequential>
  </macrodef>
  <macrodef
    name="CompileTestsuite"
    >
    <attribute name="testsuite-name"/>
    <attribute name="package-name"/>
    <sequential>
      <javac
        fork="true"
        srcdir="${eclipselink.utils.dbws.test}/${src.dir}"
        destdir="${eclipselink.utils.dbws.test}/${classes.dir}"
        includes="dbws/testing/@{package-name}/@{testsuite-name}TestSuite.java"
        classpathref="run.path"
      />
      <DeleteFileQuietly file="dbws@{package-name}.jar"/>
      <java
        classname="dbws.testing.@{package-name}.@{testsuite-name}TestSuite"
        fork="true"
        >
        <classpath>
          <path refid="run.path"/>
          <pathelement path="${eclipselink.utils.dbws.test}/${classes.dir}"/>
          <pathelement path="${eclipselink.utils.dbws.test}/${eclipselink.utils.dbws.common.jlib}"/>
        </classpath>
        <sysproperty
          key="eclipselink.logging.level"
          value="${logging.level}"
        />
        <sysproperty
          key="db.driver"
          value="${db.driver}"
        />
        <sysproperty
          key="db.url"
          value="${db.url}"
        />
        <sysproperty
          key="db.user"
          value="${db.user}"
        />
        <sysproperty
          key="db.pwd"
          value="${db.pwd}"
        />
        <sysproperty
          key="db.platform"
          value="${db.platform}"
        />
        <arg line="@{package-name}"/>
      </java>
    </sequential>
  </macrodef>
  <macrodef
    name="RunTestsuite"
    >
    <attribute name="testsuite-name"/>
    <attribute name="package-name"/>
    <sequential>
      <junit
        printsummary="withOutAndErr"
        fork="yes"
        forkmode="once"
        maxmemory="512m"
        >
        <formatter
          type="xml"
        />
        <classpath>
          <path
            refid="run.path"
          />
          <pathelement
            path="${eclipselink.utils.dbws.test}/${classes.dir}"
          />
          <pathelement
            path="${eclipselink.utils.dbws.test}/${eclipselink.utils.dbws.common.jlib}"
          />
          <pathelement
            path="dbws@{package-name}.jar"
          />
        </classpath>
        <sysproperty
          key="eclipselink.logging.level"
          value="${logging.level}"
        />
        <sysproperty
          key="db.driver"
          value="${db.driver}"
        />
        <sysproperty
          key="db.url"
          value="${db.url}"
        />
        <sysproperty
          key="db.user"
          value="${db.user}"
        />
        <sysproperty
          key="db.pwd"
          value="${db.pwd}"
        />
        <sysproperty
          key="db.platform"
          value="${db.platform}"
        />
        <test
          name="dbws.testing.@{package-name}.@{testsuite-name}TestSuite"
        />
      </junit>
      <junitreport
        todir="${eclipselink.utils.dbws.test}/${report.dir}"
        >
        <fileset
          dir="."
          >
          <include
            name="TEST-*TestSuite.xml"
          />
        </fileset>
        <report
          format="noframes"
          todir="${eclipselink.utils.dbws.test}/${report.dir}"
        />
      </junitreport>
    </sequential>
  </macrodef>
  <macrodef
    name="TeardownDatabase"
    >
    <attribute name="testsuite-name"/>
    <sequential>
      <sql
        onerror="continue"
        keepformat="true"
        driver="${db.driver}"
        url="${db.url}"
        userid="${db.user}"
        password="${db.pwd}"
        classpathref="run.path"
        delimiter="|"
        >
        <fileset
          dir="${eclipselink.utils.dbws.test}/${etc.dir}"
          >
         <include name="dbteardown_@{testsuite-name}.sql"/>
        </fileset>
      </sql>
    </sequential>
  </macrodef>
  <macrodef
    name="SetupCompileRunTeardown"
    >
    <attribute name="testsuite-name"/>
    <sequential>
      <toLower
        input="@{testsuite-name}"
        property="package-name"
      />
      <SetupDatabase
        testsuite-name="${package-name}"
      />
      <CompileTestsuite
        testsuite-name="@{testsuite-name}"
        package-name="${package-name}"
      />
      <RunTestsuite
        testsuite-name="@{testsuite-name}"
        package-name="${package-name}"
      />
      <TeardownDatabase
        testsuite-name="${package-name}"
      />
    </sequential>
  </macrodef>
  <target
    name="test"
    depends="init"
    description="setup, compile, and run dbws util testsuites"
    >
    <SetupCompileRunTeardown testsuite-name="AttachedBinary"/>
    <SetupCompileRunTeardown testsuite-name="CRUD"/>
    <SetupCompileRunTeardown testsuite-name="CustomSQL"/>
    <SetupCompileRunTeardown testsuite-name="InlineBinary"/>
    <SetupCompileRunTeardown testsuite-name="SimpleSP"/>
    <SetupCompileRunTeardown testsuite-name="SimpleTable"/>
  </target>
</project>
